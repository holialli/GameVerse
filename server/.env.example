PORT=5000
NODE_ENV=development

# MongoDB Connection
# Development: mongodb://localhost:27017/gameverse
# Production: mongodb+srv://USER:PASSWORD@cluster.mongodb.net/gameverse_prod
MONGODB_URI=mongodb://localhost:27017/gameverse

# JWT Secrets (use at least 32 characters for production)
JWT_ACCESS_SECRET=your_super_secret_access_key_change_this_in_production_min_32_chars
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production_min_32_chars
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Client URL for CORS
CLIENT_URL=http://localhost:3000

# Multer Upload
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (optional - uses Ethereal for testing)
# For production Gmail, generate App Password: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

